<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.example.e2.controllers.SignedPlaceBuyController">

    <!-- Instruction label -->
    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Select a seat" />

    <!-- Seat matrix grid -->
    <GridPane fx:id="gridPane" alignment="CENTER" hgap="10" vgap="10">
        <!-- The seat matrix will be dynamically added via the controller -->
    </GridPane>

</VBox>
