<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.e2.AddEventController">
   <children>
      <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#1faeff" height="400.0" stroke="BLACK" strokeType="INSIDE" width="600.0" />
      <Canvas fx:id="all" height="400.0" layoutX="-1.0" width="600.0" />
      <TextField fx:id="txtEventName" layoutX="226.0" layoutY="47.0" promptText="enter event name" />
      <ComboBox fx:id="lblEventType" layoutX="224.0" layoutY="97.0" onAction="#onSelectType" prefWidth="150.0" promptText="select event type" />
      <TextField fx:id="txtEventPlace" layoutX="225.0" layoutY="146.0" promptText="enter event place" />
      <DatePicker fx:id="datePickerEventDate" layoutX="212.0" layoutY="188.0" onAction="#onChooseDate" promptText="please choose a date" />
      <Text fill="#e6dfdf" layoutX="54.0" layoutY="61.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Ticets">
         <font>
            <Font size="34.0" />
         </font>
      </Text>
      <CheckBox fx:id="checkboxIsSignedPlaces" layoutX="164.0" layoutY="231.0" mnemonicParsing="false" text="Signed places" textFill="#f6f0f0">
         <font>
            <Font size="14.0" />
         </font>
      </CheckBox>
      <TextField fx:id="NumberOfPlaces" layoutX="223.0" layoutY="268.0" promptText="enter number of seats" />
      <Button fx:id="btnAddPhoto" layoutX="263.0" layoutY="308.0" mnemonicParsing="false" onAction="#onAddPhoto" text="Add Photo" />
      <Button fx:id="btnAddEvent" layoutX="263.0" layoutY="355.0" mnemonicParsing="false" onAction="#onAddEventButtonClicked" text="Add Event" />
      <Button fx:id="bthBackToHomePage" layoutX="483.0" layoutY="21.0" mnemonicParsing="false" onAction="#onBackToHomePage" prefHeight="31.0" prefWidth="85.0" text=" homePage" />
      <TextField fx:id="txtNumberOfRows" layoutX="300.0" layoutY="231.0" onAction="#ifSignedPlaces" promptText="number of rows" />

   </children>
</AnchorPane>
